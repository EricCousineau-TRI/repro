# -*- python -*-
# This file contains rules for Bazel; see drake/doc/bazel.rst.

load("//tools:python.bzl", "python_repository")

package(default_visibility = ["//visibility:private"])

cc_binary(
    name = "python/pydrake/_pydrake_typebinding.so",
    srcs = [
        "pybind11/pydrake_type_binding.cc",
        "pybind11/py_relax.h",
    ],
    copts = [
        "-Wno-#warnings",
        "-Wno-cpp",
        "-Wno-unknown-warning-option",
    ],
    linkshared = 1,
    linkstatic = 1,
    deps = [
        "@eigen//:eigen",
        "@pybind11//:pybind11",
    ],
)

genrule(
    name = "autogenerated_path_py_genrule",
    srcs = ["python/autogenerated_path.py.in"],
    outs = ["python/pydrake/autogenerated_path.py"],
    cmd = "sed 's#@RELATIVE_PATH_PYDRAKE_DRAKE@#../../..#g' $< > $@",
)

py_library(
    name = "pydrake",
    srcs = [
        "python/pydrake/__init__.py",
        ":autogenerated_path_py_genrule",
    ],
    data = [
        ":python/pydrake/_pydrake_typebinding.so",
    ],
    imports = ["python"],
    visibility = ["//visibility:public"],
)

py_test(
   name = "pydrake_type_binding_test",
   size = "small",
   srcs = ["python/pydrake/test/testTypeBinding.py"],
   main = "python/pydrake/test/testTypeBinding.py",
   tags = [],
   deps = [":pydrake"],
)
