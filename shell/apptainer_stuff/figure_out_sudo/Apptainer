Bootstrap: docker
From: ubuntu:22.04

%help
  For debugging sudo stuff.

%post
  export DEBIAN_FRONTEND=noninteractive

  apt-get update
  apt-get install -y locales
  locale-gen en_US en_US.UTF-8
  update-locale LC_ALL=en_US.UTF-8 LANG=en_US.UTF-8
  export LANG=en_US.UTF-8

%environment
  export LANG=en_US.UTF-8
